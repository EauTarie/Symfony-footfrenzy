{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slogan</th>
                <th>Description</th>
                <th>PointsNumber</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Is_recruting</th>
                <th>Is_dissolute</th>
                <th>TotalPointEarned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.slogan }}</td>
                <td>{{ team.description }}</td>
                <td>{{ team.pointsNumber }}</td>
                <td>{{ team.createdAt ? team.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ team.updatedAt ? team.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ team.isRecruting ? 'Yes' : 'No' }}</td>
                <td>{{ team.isDissolute ? 'Yes' : 'No' }}</td>
                <td>{{ team.totalPointEarned }}</td>
                <td>
                    <a href="{{ path('app_team_show', {'id': team.id}) }}">show</a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_team_new') }}">Create new</a>
{% endblock %}
