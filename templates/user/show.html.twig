{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
            <tr>
                <th>WorkingLocation</th>
                <td>{{ user.workingLocation }}</td>
            </tr>
            <tr>
                <th>StudyingClass</th>
                <td>{{ user.studyingClass }}</td>
            </tr>
            <tr>
                <th>Favorite_role</th>
                <td>{{ user.favoriteRole }}</td>
            </tr>
            <tr>
                <th>PointsNumber</th>
                <td>{{ user.pointsNumber }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastLogged_at</th>
                <td>{{ user.lastLoggedAt ? user.lastLoggedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Warned_at</th>
                <td>{{ user.warnedAt ? user.warnedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Banned_at</th>
                <td>{{ user.bannedAt ? user.bannedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_verified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_warned</th>
                <td>{{ user.isWarned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_banned</th>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_password_reset_requested</th>
                <td>{{ user.isPasswordResetRequested ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PasswordNumberRequest</th>
                <td>{{ user.passwordNumberRequest }}</td>
            </tr>
            <tr>
                <th>WarnNumber</th>
                <td>{{ user.warnNumber }}</td>
            </tr>
            <tr>
                <th>TotalPointsEarned</th>
                <td>{{ user.totalPointsEarned }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
